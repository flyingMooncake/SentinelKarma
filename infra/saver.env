# Environment for log-saver (tools.saver)
# MQTT broker
MQTT_URL=mqtt://mosquitto:1883

# Directories inside the container (mounted from host via volumes in compose)
NORMAL_DIR=/data/logs_normal
MALICIOUS_DIR=/data/malicious_logs
CONTRACT_DIR=/data/contract_data

# Rotation and retention
NORMAL_ROTATE_SECS=1800
MALICIOUS_ROTATE_SECS=180
NORMAL_TTL_MINS=120
MALICIOUS_TTL_MINS=0

# Thresholds
Z_THRESHOLD=3.0
ERR_THR=0.05
P95_THR=250
ZLAT_THR=3.0
ZERR_THR=3.0

# Contract sidecar configuration
SALT_ID=0
CONTRACT_MAX_ATTACKERS=10
