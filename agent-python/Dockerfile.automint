FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Solana CLI
RUN sh -c "$(curl -sSfL https://release.solana.com/v1.18.0/install)" && \
    echo 'export PATH="/root/.local/share/solana/install/active_release/bin:$PATH"' >> ~/.bashrc

ENV PATH="/root/.local/share/solana/install/active_release/bin:$PATH"

# Install Python dependencies
RUN pip install --no-cache-dir \
    solana \
    anchorpy \
    solders \
    aiohttp

# Set working directory
WORKDIR /app

# Copy scripts
COPY auto_mint_monitor.py /app/
COPY ../sentinel/target/idl/sentinel.json /app/idl/

# Create volume for wallet
VOLUME ["/root/.config/solana"]

# Run monitor
CMD ["python3", "auto_mint_monitor.py"]
